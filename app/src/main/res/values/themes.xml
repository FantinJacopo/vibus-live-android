<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme principale ViBus Live -->
    <style name="Theme.ViBusLive" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/svt_blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash Theme per il caricamento -->
    <style name="Theme.ViBusLive.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/svt_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_high_res</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ViBusLive</item>
    </style>
</resources>